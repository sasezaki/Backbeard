{
    "name":"sasezaki/backbeard",
    "description":"yet another DSLish minimum oriented framework for PHP",
    "license": "BSD-3-Clause",
    "keywords": ["microframework", "psr7"],
    "authors": [
        {
            "name": "sasezaki",
            "email": "sasezaki@gmail.com",
            "homepage": "http://github.com/sasezaki",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "psr/http-message": "~0.10",
        "nikic/fast-route": "~0.3",
        "struggle-for-php/sfp-stream-view": "~0.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.4",
        "phly/http": "dev-master",
        "satooshi/php-coveralls": "~0.6"
    },
    "autoload": {
        "psr-4":{
            "Backbeard\\":"src/Backbeard"
        }
    },    
    "autoload-dev": {
        "psr-4":{
            "BackbeardTest\\":"tests"
        }
    }
}
